.f-list
	display inline-block
	margin-top 30px
	+below(900px)
		display block
		margin-top 15px
	ul
		margin-top 15px
		margin-right 15px
		+below(900px)
			margin-top 10px
			margin-right 0

	li
		margin-top 10px
		+below(900px)
			margin-top 7px

	&__title
		color $sc-frontFooter
		font-size 18px
		+below(900px)
			color $sc-white

	&__link
		color $sc-frontFooter
		text-decoration none
		font-size 13px
		transition 0.5s
		+below(900px)
			color $sc-white
		&:hover
			text-decoration underline
