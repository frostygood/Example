.main-text
	display block
	margin-top 60px
	padding-right 2%
	transition 0.7s
	+below(767px)
		margin-top 45px

	&__title
		font-size 36px
		color $sc-white
		font-weight 500
		transition 0.7s
		font-family 'Roboto Medium', sans-serif
		+below(767px)
			font-size 24px
			text-align center

	&__text
		font-size 24px
		color $sc-white
		font-family 'Roboto Regular', sans-serif
		line-height 1.33
		margin-top 10px
		+below(767px)
			display none
